# --- Imports --- #
import tkinter as tk          # Creates the window and text
import time                   # To time out when window closed
# --- Window management --- #
window = tk.Tk()
window.title("Enter things")
window.geometry("300x200")
# --- Input from user --- #
text = input("")
# --- Create label and refresh window --- #
label = tk.Label(window, text=text)
label.pack()
window.mainloop()
print("Window closed, ending in 3 seconds")
time.sleep(3)
